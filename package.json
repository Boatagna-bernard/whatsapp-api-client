{
  "name": "@green-api/whatsapp-api-client",
  "version": "0.1.6",
  "description": "Library to integrate with WhatsApp API. For details have look at https://green-api.com",
  "license": "MIT",
  "main": "lib/bundle.js",
  "bugs": "https://github.com/green-api/whatsapp-api-client/issues",
  "homepage": "https://github.com/green-api/whatsapp-api-client",
  "scripts": {
    "build1": "rollup -c --environment BUILD:production",
    "build2": "browserify lib/bundle.js -o lib/bundle2.js --insert-globals true --insert-global-vars axios",
    "build3": "terser lib/bundle2.js -o lib/whatsapp-api-client.min.js -c",
    "build": "npm run build1 && npm run build2 && npm run build3",
    "server": "node ./src/WebhookAPI.js"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/green-api/whatsapp-api-client.git"
  },
  "author": "Green API team",
  "files": [
    "bundle.js"
  ],
  "keywords": [
    "whatsapp",
    "whatsapp-api",
    "whatsapp-library",
    "whatsapp-send-message",
    "whatsapp-sender",
    "whatsapp-message-sender"
  ],
  "devDependencies": {
    "dotenv": "8.2.0",
    "rollup-plugin-terser": "^5.3.0"
  },
  "dependencies": {
    "axios": "0.19.2"
  }
}
